{
  "name": "ci-debug",
  "version": "0.1.0",
  "description": "Safely debug CI environments. Prints system info and environment variables (with secrets redacted).",
  "type": "module",
  "bin": {
    "ci-debug": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "scripts": {
    "test": "node --import=tsx --test test/*.ts",
    "build": "tsup",
    "prepublishOnly": "npm run build && npm test",
    "lint": "xo"
  },
  "keywords": [
    "ci",
    "debug",
    "github-actions",
    "env",
    "system-info",
    "redact",
    "environment"
  ],
  "author": {
    "name": "mgks",
    "url": "https://mgks.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgks/ci-debug.git"
  },
  "bugs": {
    "url": "https://github.com/mgks/ci-debug/issues"
  },
  "homepage": "https://github.com/mgks/ci-debug#readme",
  "funding": "https://github.com/sponsors/mgks",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.61.1"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/filename-case": "off"
    }
  }
}